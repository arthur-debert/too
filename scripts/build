#!/usr/bin/env bash
set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
BOLD='\033[1m'
NC='\033[0m' # No Color

# Usage function
usage() {
    cat <<EOF
Usage: $(basename "$0") [OPTIONS]

Build the too CLI binary and run tests.

Options:
  --skip-tests      Skip running tests after building (default: run tests)
  -h, --help        Show this help message and exit

Examples:
  # Build and run tests (default)
  $(basename "$0")

  # Build only, skip tests
  $(basename "$0") --skip-tests

EOF
}

# Parse command line arguments
SKIP_TESTS=false

while [[ $# -gt 0 ]]; do
    case $1 in
        --skip-tests)
            SKIP_TESTS=true
            shift
            ;;
        -h|--help)
            usage
            exit 0
            ;;
        *)
            echo -e "${RED}Error: Unknown option '$1'${NC}" >&2
            usage
            exit 1
            ;;
    esac
done

# Build output directory (using bin/ to avoid conflicts with goreleaser's dist/)
BIN_DIR="bin"

echo -e "${BLUE}${BOLD}üî® Building too...${NC}"
echo

# Clean and create build directories
echo -e "${BLUE}Setting up build directories...${NC}"
# Only clean the bin directory, preserve other build artifacts
rm -rf "${BIN_DIR}"
mkdir -p "${BIN_DIR}"
echo -e "${GREEN}‚úÖ Build directories ready${NC}"
echo

# Get version information from git
VERSION=$(git describe --tags --always --dirty 2>/dev/null || echo "dev")
COMMIT=$(git rev-parse --short HEAD 2>/dev/null || echo "unknown")
BUILD_DATE=$(date -u '+%Y-%m-%d_%H:%M:%S')

# Show build information
echo -e "${BLUE}Build Information:${NC}"
echo -e "  Version: ${BOLD}$VERSION${NC}"
echo -e "  Commit:  ${BOLD}$COMMIT${NC}"
echo -e "  Date:    ${BOLD}$BUILD_DATE${NC}"
echo

# List all packages to ensure they're recognized
echo -e "${BLUE}Listing all packages...${NC}"
if command -v go >/dev/null 2>&1 && [ -f "vendor/modules.txt" ]; then
    go list -mod=vendor ./...
else
    go list ./...
fi

# Build all packages first
echo -e "${BLUE}Building all packages...${NC}"
if [ -f "vendor/modules.txt" ]; then
    # Use vendor if available
    if go build -mod=vendor -v ./...; then
        echo -e "${GREEN}‚úÖ All packages built successfully${NC}"
    else
        echo -e "${RED}‚ùå Package build failed${NC}"
        exit 1
    fi
else
    # Fall back to normal build
    if go build -v ./...; then
        echo -e "${GREEN}‚úÖ All packages built successfully${NC}"
    else
        echo -e "${RED}‚ùå Package build failed${NC}"
        exit 1
    fi
fi

# Set up LDFLAGS for version embedding
# Using a more flexible approach that works with both main package and internal/version package
LDFLAGS="-s -w"
if [ -d "internal/version" ] || [ -d "pkg/version" ]; then
    # If there's a version package, use it
    VERSION_PKG=$(find . -name "version.go" -path "*/version/*" | head -1 | sed 's|/version.go||' | sed 's|^\./||')
    if [ -n "$VERSION_PKG" ]; then
        LDFLAGS="$LDFLAGS -X github.com/arthur-debert/too/$VERSION_PKG.Version=$VERSION"
        LDFLAGS="$LDFLAGS -X github.com/arthur-debert/too/$VERSION_PKG.Commit=$COMMIT"
        LDFLAGS="$LDFLAGS -X github.com/arthur-debert/too/$VERSION_PKG.Date=$BUILD_DATE"
    else
        # Fall back to main package
        LDFLAGS="$LDFLAGS -X main.version=$VERSION"
        LDFLAGS="$LDFLAGS -X main.commit=$COMMIT"
        LDFLAGS="$LDFLAGS -X main.buildDate=$BUILD_DATE"
    fi
else
    # Use main package
    LDFLAGS="$LDFLAGS -X main.version=$VERSION"
    LDFLAGS="$LDFLAGS -X main.commit=$COMMIT"
    LDFLAGS="$LDFLAGS -X main.buildDate=$BUILD_DATE"
fi

# Build the main binary
echo
echo -e "${BLUE}Building CLI binary...${NC}"
# Enable CGO for SQLite support
export CGO_ENABLED=1
BUILD_CMD="go build"
if [ -f "vendor/modules.txt" ]; then
    BUILD_CMD="$BUILD_CMD -mod=vendor"
fi

if [ -d "cmd/too/main" ]; then
    # Some projects have main package in a subdirectory
    BUILD_TARGET="./cmd/too/main"
elif [ -d "cmd/too" ]; then
    BUILD_TARGET="./cmd/too"
else
    echo -e "${RED}‚ùå Cannot find cmd/too directory${NC}"
    exit 1
fi

# Detect OS and architecture for binary naming
OS=$(go env GOOS)
ARCH=$(go env GOARCH)
BINARY_NAME="too.${OS}-${ARCH}"

if $BUILD_CMD -ldflags "$LDFLAGS" -o "${BIN_DIR}/${BINARY_NAME}" "$BUILD_TARGET"; then
    echo -e "${GREEN}‚úÖ Binary built successfully: ${BIN_DIR}/${BINARY_NAME}${NC}"
else
    echo -e "${RED}‚ùå Binary build failed${NC}"
    exit 1
fi

# Create multi-arch wrapper script
echo
echo -e "${BLUE}Creating multi-arch wrapper script...${NC}"
cat > "${BIN_DIR}/too" << 'EOF'
#!/usr/bin/env bash
set -e

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Detect runtime OS and architecture
OS=$(uname -s | tr '[:upper:]' '[:lower:]')
ARCH=$(uname -m)

# Map architecture names
case "$ARCH" in
    x86_64)
        ARCH="amd64"
        ;;
    aarch64|arm64)
        ARCH="arm64"
        ;;
    i386|i686)
        ARCH="386"
        ;;
    *)
        echo "Unsupported architecture: $ARCH" >&2
        exit 1
        ;;
esac

# Handle OS naming differences
case "$OS" in
    darwin|linux|freebsd|openbsd|netbsd)
        # These are fine as-is
        ;;
    *)
        echo "Unsupported OS: $OS" >&2
        exit 1
        ;;
esac

# Construct binary name and execute
BINARY="${SCRIPT_DIR}/too.${OS}-${ARCH}"

if [ ! -f "$BINARY" ]; then
    echo "Binary not found: $BINARY" >&2
    echo "Available binaries:" >&2
    ls -la "${SCRIPT_DIR}"/too.* 2>/dev/null || echo "None found" >&2
    exit 1
fi

exec "$BINARY" "$@"
EOF

chmod +x "${BIN_DIR}/too"
echo -e "${GREEN}‚úÖ Multi-arch wrapper created${NC}"

# Run tests if not skipped
if [[ "$SKIP_TESTS" != "true" ]]; then
    echo
    echo -e "${YELLOW}Running tests...${NC}"
    TEST_CMD="go test ./... -short"
    if [ -f "vendor/modules.txt" ]; then
        TEST_CMD="go test -mod=vendor ./... -short"
    fi
    if $TEST_CMD; then
        echo -e "${GREEN}‚úÖ All tests passed${NC}"
    else
        echo -e "${RED}‚ùå Tests failed${NC}"
        exit 1
    fi
else
    echo
    echo -e "${YELLOW}‚ö†Ô∏è  Tests skipped (--skip-tests flag provided)${NC}"
fi

# Verify the binary works
echo
echo -e "${BLUE}Verifying binary...${NC}"
if "${BIN_DIR}/too" --version >/dev/null 2>&1; then
    echo -e "${GREEN}‚úÖ Binary verification passed${NC}"
    # Show actual version output
    echo -e "${BLUE}Version output:${NC}"
    "${BIN_DIR}/too" --version || true
elif "${BIN_DIR}/too" --help >/dev/null 2>&1; then
    echo -e "${GREEN}‚úÖ Binary verification passed (via --help)${NC}"
else
    echo -e "${RED}‚ùå Binary verification failed${NC}"
    exit 1
fi

echo
echo -e "${GREEN}${BOLD}üéâ Build completed successfully!${NC}"
echo -e "${BLUE}Binary location: ${BOLD}${BIN_DIR}/too${NC}"
